{
  "name": "NewsHACK II: Electric Boogaloo",
  "version": "0.0.1",
  "description": "Chrome extension for BBC NewsHACK",
  "icons": { "128": "img/icon128.png" },
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs",
	"activeTab",
	"contextMenus",
	"http://data.bbc.co.uk/"
  ],
  "commands": {
	  "doSelection": {
		"suggested_key": {
		  "default": "Ctrl+Q",
		  "mac": "Ctrl+Q"
		},
		"description": "My description",
		"global": true
	 }
  },
  "browser_action": {
      "default_name": "Display Map",
      "default_icon": "img/icon128.png",
      "default_popup": "popup/popup.html",
	  "default_title": "This is a test"
  },
  "manifest_version": 2,
  
  "content_security_policy": "img-src *; default-src 'none'; style-src 'self'; script-src 'self' 'unsafe-eval'; connect-src * "
}
